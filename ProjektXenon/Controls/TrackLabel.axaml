<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:ProjektXenon.Controls"
             xmlns:c="http://schemas.superdev.ch/valueconverters/2016/xaml"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ProjektXenon.Controls.TrackLabel">
    <UserControl.Template>
        <ControlTemplate TargetType="controls:TrackLabel">
            <StackPanel Spacing="3"
                        Margin="0,0">
                
                <TextBlock Text="{TemplateBinding Title, Converter={StaticResource StringCaseConverter}, ConverterParameter=u}"
                           FontSize="14"
                           TextTrimming="CharacterEllipsis"
                           FontWeight="SemiBold" 
                           Foreground="{TemplateBinding Foreground}"/>
                <TextBlock Text="{TemplateBinding Subtitle}"
                           FontSize="12"
                           TextTrimming="CharacterEllipsis"
                           Foreground="{TemplateBinding Foreground}"
                           FontWeight="Thin" />
            </StackPanel>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
